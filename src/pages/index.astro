---
import Layout from "@/layouts/Layout.astro";
import SectionContainer from "@/components/SectionContainer.astro";
import Experience from "@/components/Experience.astro";
import Hero from "@/components/Hero.astro"; 
import Projects from "@/components/Projects.astro"; 
import BriefCase from "@/components/icons/BriefCase.astro";
import CodeIcon from "@/components/icons/Code.astro";
---

<Layout
	title="Portfolio de Jander Gomez Barrueta - Desarrollador y Programador Web Full Stack"
	description="Soy un Desarrollador Web Full Stack con experiencia en Front End y Back End, destacándome en tecnologías como JavaScript, React, NodeJS, Express, MySQL, Git y Github."
>
	<main class="px-4">
		<SectionContainer class="py-20 md:py-40 pb-10 md:pb-20">
			<Hero>
				<slot />
			</Hero>
		</SectionContainer>
		
		<SectionContainer id="experience">
			<h2
        class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
      >
        <BriefCase class="size-8" />
        Experiencia laboral
      </h2>
			<Experience />
		</SectionContainer>
		<SectionContainer id="projects">
      <h2
        class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
      >
        <CodeIcon class="size-7" />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>

	</main>
</Layout>
